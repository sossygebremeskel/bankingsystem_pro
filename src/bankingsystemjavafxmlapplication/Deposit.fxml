<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="bankingsystemjavafxmlapplication.TransactionController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="1.0" layoutY="-3.0" prefHeight="400.0" prefWidth="600.0" style="-fx-padding: 10;">
         <children>
            <Label alignment="CENTER" prefHeight="39.0" prefWidth="514.0" style="-fx-background-color: GREEN;" text="DEPOSIT" textFill="WHITE">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <HBox prefHeight="128.0" prefWidth="580.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="215.0" prefWidth="307.0" spacing="10.0">
                     <children>
                        <Label text="ACCOUNT HOLDER :">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label text="CURRENT BALANCE :">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="215.0" prefWidth="299.0" spacing="10.0">
                     <children>
                        <Label fx:id="lableAccountHolderName" text="NAME">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="labelCurrentBalance" text="0.00">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER_LEFT" prefHeight="116.0" prefWidth="580.0" style="-fx-spacing: 10;">
               <children>
                  <Label text="Enter ammount to deposit :">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDeposit" minHeight="20.0" prefHeight="38.0" prefWidth="580.0">
                     <padding>
                        <Insets left="16.0" right="15.0" top="10.0" />
                     </padding>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <Button fx:id="btnDeposit" mnemonicParsing="false" onAction="#onDeposit" prefHeight="44.0" prefWidth="124.0" style="-fx-background-color: GREEN;" text="DEPOSIT" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
